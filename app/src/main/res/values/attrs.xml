<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--实现一个colorful的button-->
    <declare-styleable name="ColorfulButton">
        <!--选中合适的shape-->
        <attr name="shape" format="integer">
            <enum name="RECTANGLE" value="0" />
            <enum name="OVAL" value="1" />
            <enum name="LINE" value="2" />
            <enum name="RING" value="3" />
        </attr>
        <!--颜色-->
        <attr name="color" format="color"/>
        <attr name="pressColor" format="color"/>
        <attr name="focusColor" format="color"/>
        <attr name="rippleColor" format="color"/>

        <!--圆角值-->
        <attr name="cornerRadius" format="dimension"/>

        <!--边框-->
        <attr name="strokeColor" format="color" />
        <attr name="strokeWidth" format="dimension" />


        <!--渐变-->
        <attr name="gradient" format="integer">
            <enum name="LINEAR" value="0" />
            <enum name="RADIAL" value="1" />
            <enum name="SWEEP" value="2" />
        </attr>

        <attr name="gradientOrientation" format="integer">
            <enum name="TOP_BOTTOM" value="0" />
            <!--top-right to bottom left 以此类推-->
            <enum name="TR_BL" value="1" />
            <enum name="RIGHT_LEFT" value="2" />
            <enum name="BR_TL" value="3" />
            <enum name="BOTTOM_TOP" value="4" />
            <enum name="BL_TR" value="5" />
            <enum name="LEFT_RIGHT" value="6" />
            <enum name="TL_BR" value="7" />
        </attr>


        <attr name="startColor" format="color"/>
        <attr name="centerColor" format="color"/>
        <attr name="endColor" format="color"/>
        <attr name="gradientRadius" format="dimension" />

    </declare-styleable>
</resources>